{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@lib/*": ["./src/lib/*"],
      "@schema/*": ["./src/schema/*"],
      "@styles/*": ["./src/styles/*"],
      "@api/*": ["./src/api/*"],
      "@actions/*": ["./src/actions/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@consts/*": ["./src/consts/*"],
      "@types/*": ["./src/types/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
